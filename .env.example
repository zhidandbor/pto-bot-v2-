# Telegram
BOT_TOKEN=0000000000:AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA
BOT_MODE=polling
WEBHOOK_URL=
WEBHOOK_HOST=0.0.0.0
WEBHOOK_PORT=8080
WEBHOOK_PATH=/webhook

# Security / RBAC
SUPERADMIN_ID=123456789

# Database
DATABASE_URL=postgresql+asyncpg://pto_bot:pto_bot@db:5432/pto_bot

# Defaults in DB settings (will be initialized on startup if absent)
DEFAULT_RECIPIENT_EMAIL=pto@example.com
DEFAULT_COOLDOWN_MINUTES=30

# SMTP (async)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=user@example.com
SMTP_PASSWORD=secret
SMTP_USE_TLS=true
SMTP_STARTTLS=true
MAIL_SENDER=bot@example.com

# Logging
LOG_LEVEL=INFO
LOG_JSON=true

# Context cache / pending actions
CONTEXT_TTL_SECONDS=3600
PENDING_ACTION_TTL_SECONDS=600

# ============================================================
# PTO-bot â€” environment variables template
# Copy to .env and fill in real values. Never commit .env!
# ============================================================

# --- Telegram Bot ---
BOT_TOKEN=your_bot_token_here
BOT_MODE=polling          # polling | webhook
SUPERADMIN_ID=123456789

# --- Database ---
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/pto_bot

# --- Webhook (required only when BOT_MODE=webhook) ---
WEBHOOK_URL=
WEBHOOK_HOST=0.0.0.0
WEBHOOK_PORT=8080
WEBHOOK_PATH=/webhook

# --- SMTP ---
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=bot@example.com
SMTP_PASSWORD=your_smtp_password
SMTP_USE_TLS=true
SMTP_STARTTLS=true
MAIL_SENDER=bot@example.com

# --- Application defaults ---
DEFAULT_RECIPIENT_EMAIL=recipient@example.com
DEFAULT_COOLDOWN_MINUTES=30
CONTEXT_TTL_SECONDS=3600
PENDING_ACTION_TTL_SECONDS=600

# --- Logging ---
LOG_LEVEL=INFO
LOG_JSON=true

# --- Modules (comma-separated names, empty = no modules) ---
# Example: ENABLED_MODULES=requests,knowledge,letters
ENABLED_MODULES=
